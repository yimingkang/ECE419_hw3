	}
	
	public void writeObject(MPacket packet){
		// 1- write to sendQueue
		// 2- return
		
	}
	
    public synchronized MPacket readObject() throws IOException, ClassNotFoundException{
    	
    	return  (MPacket) new Object();	
	}
	
	

}
